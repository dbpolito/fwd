server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name url;
    root /home/forge/url/public;

    charset utf-8;

    location / {
        proxy_buffers 16 4k;
        proxy_buffer_size 2k;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_pass http://ip;
    }
}
